<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:MyVisualApp"
    xmlns:pages="clr-namespace:MyVisualApp.Pages"
    x:Class="MyVisualApp.AppShell">

    <FlyoutItem Title="Ana Sayfa" Icon="home.png">
        <!-- local:MainPage için local ad uzayı tanımlandı -->
        <ShellContent ContentTemplate="{DataTemplate local:MainPage}" />
    </FlyoutItem>

    <FlyoutItem Title="Kredi Hesaplama" Icon="credit.png">
        <!-- pages:CreditCalculatorPage için pages ad uzayı tanımlandı -->
        <ShellContent ContentTemplate="{DataTemplate pages:CreditCalculatorPage}" />
    </FlyoutItem>
    <!-- pages:BMICalculatorPage için pages ad uzayı tanımlandı -->
    <FlyoutItem Title="VKİ Hesaplama" Icon="bmi.png">
        <ShellContent ContentTemplate="{DataTemplate pages:BMICalculatorPage}" />
    </FlyoutItem>
    <!-- pages:ColorPickerPage için pages ad uzayı tanımlandı -->
    <FlyoutItem Title="Renk Seçici" Icon="palette.png">
        <ShellContent ContentTemplate="{DataTemplate pages:ColorPickerPage}" />
    </FlyoutItem>

</Shell>
